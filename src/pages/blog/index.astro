---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout
  title="BLOG"
  description="Thoughts on code, building products, and the journey of a solo founder."
>
  <!-- Hero Header with Background -->
  <section class="relative border-b-2 border-[#FAFAF8] overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img
        src="/blog-bg.jpg"
        alt=""
        class="w-full h-full object-cover opacity-30"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-[#0A0A0A] via-[#0A0A0A]/80 to-transparent"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-4xl mx-auto px-6 py-20">
      <h1 class="text-4xl md:text-6xl font-bold uppercase tracking-wider mb-4">
        <span class="text-[#C45A3B]">BLOG</span>
      </h1>
      <p class="text-lg md:text-xl opacity-80 max-w-2xl">
        Thoughts on code, building products, and the journey of a solo founder.
      </p>
    </div>
  </section>

  <section class="max-w-4xl mx-auto px-6 py-16">
    <!-- Posts Header -->
    <header class="mb-8">
      <p class="text-sm uppercase tracking-wider opacity-60">ALL POSTS</p>
    </header>

    <!-- Posts List -->
    {posts.length === 0 ? (
      <div class="border-2 border-[#FAFAF8] p-8 text-center">
        <p class="text-lg opacity-60">No posts yet. Check back soon!</p>
      </div>
    ) : (
      <div class="space-y-8">
        {posts.map((post) => {
          const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          });

          return (
            <article class="border-2 border-[#FAFAF8] p-6 hover:border-[#C45A3B] transition-colors group">
              <a href={`/blog/${post.slug}`} class="block">
                <div class="flex flex-wrap gap-2 mb-3">
                  {post.data.tags.slice(0, 3).map((tag) => (
                    <span class="text-xs border border-[#C45A3B] text-[#C45A3B] px-2 py-0.5 uppercase tracking-wider">
                      {tag}
                    </span>
                  ))}
                </div>

                <h2 class="text-xl md:text-2xl font-bold uppercase tracking-wider mb-2 group-hover:text-[#C45A3B] transition-colors">
                  {post.data.title}
                </h2>

                <p class="opacity-70 mb-4 line-clamp-2">
                  {post.data.description}
                </p>

                <div class="flex flex-wrap gap-4 text-sm opacity-50 uppercase tracking-wider">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formattedDate}
                  </time>
                  {post.data.readingTime && (
                    <>
                      <span>//</span>
                      <span>{post.data.readingTime}</span>
                    </>
                  )}
                </div>
              </a>
            </article>
          );
        })}
      </div>
    )}
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
